<h1><%= t('.title') %></h1>

<table>

  <tbody>
  <% @categories.each do |category| %>
      <tr>
        <td><%= category.title %></td>
        <td><%= link_with_icon(category, 'eye') %></td>
        <td><%= link_with_icon(edit_admin_category_path(category), 'pencil') %></td>
        <td><%= link_with_icon([:admin,category], 'trash-o', method: :delete, data: { confirm: t('common.are_you_sure') }) %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<h3><%= t('.new')%></h3>
<%= render 'form' %>